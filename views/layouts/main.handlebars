<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ethical Eating - {{title}}</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!--Header and navigation bar-->
    <header>
        <div><img src="/images/banner.png" alt="banner" id="banner"></div>
        <div class="navbar">
            <a class="active" href="/">Home</a>
            <a href="/build">Build a Recipe</a>
            <a href="/faq">FAQ</a>
            {{#if user}}
            <div class="account">
                <a class="profile_name">Profile: {{this.user.username}}</a>
                <a style="pointer-events: none">|</a>
                <a href="">My Recipes</a>
                <a style="pointer-events: none">|</a>
                <form class="logout_form" action="/logout?_method=DELETE" method="POST">
                    <button class="logout_button" type="submit">Logout</button>
                </form>
            </div>
            {{else}}
            <div class="account">
                <a href="/login">Log In</a>
                <a href="#" id="register_button" class="register_button">Register</a>
            </div>
            {{/if}}
        </div>
    </header>
    <!--Here is the body-->
    <div>{{{body}}}</div>
</body>
</html>