<div>
    <p>Custom Recipe: [recipe name]</p>
</div>
<table id="full-table">
    <tr>
        <!--On the left, the work-in=progress recipe-->
        <td class="build-column">
            <div id="recipe">
                <table id="recipe-table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Added Ingredients</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="recipe-table-body"></tbody>
                </table>
            </div>
        </td>

        <!--On the right, the list of available ingredients-->
        <td id="ingredients-column" class="build-column">
            <div id="ingredients">
                <table id="ingredients-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Available Ingredients</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="ingredients-table-body"></tbody>
                </table>
            </div>
        </td>
        
        <!--Ingredient info-->
        <td class="build-column">
            <div id="ing-info-div">
                <p class="ing-info">Ingredient Name</p>
                <p id="ingredient-name"><br></p>
                <p class="ing-info">Ethical Problem</p>
                <p id="ingredient-ethics"><br></p>
                 <p class="ing-info">Ethical Problem Explanation</p>
                <p id="ethic-information"><br></p>
                <p class="ing-info">Alternatives</p>
                <p id="ingredient-alternatives"><br></p>
            </div>
        </td>
    </tr>
</table>

<script type="text/javascript" src='/js/ServerInteractor.js'></script>
<script type="text/javascript" src='/js/build/BuildRecipeViewController.js'></script>
<script type="text/javascript" src='/js/build/BuildRecipeFunctionFactory.js'></script>
