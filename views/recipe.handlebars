<script src="https://kit.fontawesome.com/dbba22b539.js" crossorigin="anonymous"></script>
<script type="text/javascript" src='/js/ServerInteractor.js'></script>
<script type="text/javascript" src='/js/TableBuilder.js'></script>
<link rel="stylesheet" type="text/css" href="css/recipe.css">

<div class="viewCat">

    <a href="javascript:history.back()">Return to View Recipes</a>

</div>
<div id="recipe-container">
    <div>
        <p>View {{#each results}}{{#if @first}}{{this.recipename}}{{/if}}{{/each}} Ingredients</p>
        <ul>
            {{#each results}}
                <li>{{this.ingredientname}}
                    {{#if this.problem}}
                    <i class="fas fa-exclamation-triangle">
                        <span class="tooltip-text">{{this.problem}} - {{this.description}}</span>
                    </i>
                    {{/if}}
                </li>
            {{/each}}
        </ul> 
    </div>

    <div>
        {{#if results.1.ownerid}}
            <a href="/build?recipeid={{results.1.recipeid}}">Edit this private recipe</a>
        {{else}}
            <a href="/build?recipeid={{results.1.recipeid}}">Customize this public recipe</a>
        {{/if}}
    </div>
</div>
